# PAYLOAD_SECRET: Required for encrypting API keys and sessions
# IMPORTANT: Use a different secret for each environment (dev/staging/production)
# Generate a secure secret: https://generate-secret.vercel.app/32
PAYLOAD_SECRET=YOUR_SECRET_HERE_GENERATE_A_NEW_ONE

# DATABASE_URI: MongoDB Atlas connection string
# Development: mongodb+srv://vercel-admin-user:<db_password>@cluster0.dtnq22u.mongodb.net/nucleus-labs-dev?retryWrites=true&w=majority&appName=Cluster0
# Production:  mongodb+srv://vercel-admin-user:<db_password>@cluster0.dtnq22u.mongodb.net/nucleus-labs-prod?retryWrites=true&w=majority&appName=Cluster0
# Replace <db_password> with your actual MongoDB Atlas password
DATABASE_URI=mongodb+srv://vercel-admin-user:<db_password>@cluster0.dtnq22u.mongodb.net/nucleus-labs-dev?retryWrites=true&w=majority&appName=Cluster0

COMPANY_NAME="Nucleus Labs"
TWITTER_CREATOR="@nucleuslabs"
TWITTER_SITE="https://nucleuslabs.io"
SITE_NAME="Nucleus Labs"

PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Feature flags
# Set to 'true' in production to enable coming soon mode
NEXT_PUBLIC_COMING_SOON_MODE=false

# Used to preview drafts
PREVIEW_SECRET=demo-draft-secret

# Stripe API keys
STRIPE_SECRET_KEY=sk_test_
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_WEBHOOKS_SIGNING_SECRET=whsec_

# Stripe Product ID for 3D Print Service
# Create with: pnpm tsx src/scripts/createStripeProduct.ts
STRIPE_PRINT_SERVICE_PRODUCT_ID=prod_
